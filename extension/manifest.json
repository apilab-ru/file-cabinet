{
  "manifest_version": 2,

  "name": "File-cabinet",
  "description": "This extension allows you control your library",
  "version": "1.0",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "browser_action": {
    "default_title": "File cabinet",
    "default_icon": "icon.png",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "persistent": true,
    "scripts": ["extension.js"]
  },

  "permissions": [
    "activeTab",
    "storage",
    "bookmarks",
    "http://*/*",
    "https://*/*"
  ]
}
